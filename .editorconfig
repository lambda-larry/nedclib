# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# lambda-larry: The original author used tabs with 4 width unit... This might
# have been the VS default settings back in the days (before 2007). I might
# change this to KNF style from OpenBSD or similar in the future.
[*.{c,h}]
indent_style = tab
indent_size  = 4

[*.{cpp,hpp}]
indent_style = tab
indent_size  = 4
